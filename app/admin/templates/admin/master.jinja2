<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin{% endblock %}</title>

    <!-- CSS files -->
    <link rel="stylesheet" href="{{ url_for('admin:statics', path='css/tabler.min.css') }}">
    <link rel="stylesheet" href="{{ url_for('admin:statics', path='css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ url_for('admin:statics', path='css/select2.min.css') }}">
    <link rel="stylesheet" href="{{ url_for('admin:statics', path='css/flatpickr.min.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    {% block head %}{% endblock %}
</head>
<body>
<div class="wrapper">
    <!-- Sidebar Navigation -->
    <aside class="navbar navbar-expand-lg navbar-vertical navbar-expand-md navbar-dark">
        <div class="container-fluid">
            <h1 class="navbar-brand navbar-brand-autodark">
                <a href="{{ url_for('admin:index') }}">
                    <h3>Admin</h3>
                </a>
            </h1>
            <nav class="navbar navbar-expand-sm" id="navbar-menu">
                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <div class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link {% if request.path == '/admin/analytics' %}active{% endif %}" href="{{ url_for('admin:analytics') }}">
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    <i class="fa fa-chart-bar"></i>
                                </span>
                                <span class="nav-link-title">API Analytics</span>
                            </a>
                            <a class="nav-link {% if request.path == '/admin/exercise-analytics' %}active{% endif %}" href="{{ url_for('admin:exercise_analytics') }}">
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    <i class="fa fa-chart-bar"></i>
                                </span>
                                <span class="nav-link-title">Exercise Analytics</span>
                            </a>
                            <a class="nav-link {% if request.path == '/admin/exercise-difficulty-analytics' %}active{% endif %}" href="{{ url_for('admin:exercise_difficulty_analytics') }}">
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    <i class="fa fa-chart-line"></i>
                                </span>
                                <span class="nav-link-title">Exercise Difficulty Analytics</span>
                            </a>
                            <a class="nav-link {% if request.path == '/admin/phoneme-difficulty-analytics' %}active{% endif %}" href="{{ url_for('admin:phoneme_difficulty_analytics') }}">
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    <i class="fa fa-chart-line"></i>
                                </span>
                                <span class="nav-link-title">Phoneme Difficulty Analytics</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" class="nav-item" href="{{ url_for('admin:index') }}">
                                <span class="nav-link-title">Back</span>
                            </a>
                        </li>
                        
                    </div>
                </div>
            </nav>
            
            <a href="{{ url_for('admin:logout') }}" class="btn btn-secondary btn-icon">
                <i class="fa fa-sign-out"></i>
                <span>Logout</span>
            </a>
        </div>
    </aside>

        {% block content %}{% endblock %}
    </div>


</div>

<!-- JavaScript files -->
<script src="{{ url_for('admin:statics', path='js/jquery.min.js') }}"></script>
<script src="{{ url_for('admin:statics', path='js/tabler.min.js') }}"></script>
<script src="{{ url_for('admin:statics', path='js/popper.min.js') }}"></script>
<script src="{{ url_for('admin:statics', path='js/bootstrap.min.js') }}"></script>
<script src="{{ url_for('admin:statics', path='js/select2.full.min.js') }}"></script>
<script src="{{ url_for('admin:statics', path='js/flatpickr.min.js') }}"></script>
<script src="{{ url_for('admin:statics', path='js/main.js') }}"></script>

{% block tail_js %}{% endblock %}
</body>
</html>